<configuration>
    <system.web>
        <customErrors mode="Off" />
    </system.web>
  <system.webServer>
  <rewrite>
    <rules>
      <rule name="API Production" stopProcessing="true">
        <match url="^api($|/.*)$" />
        <action type="Rewrite" url="/api.php?{R:1}" />
      </rule>
    </rules>
  </rewrite>
  </system.webServer>
</configuration>